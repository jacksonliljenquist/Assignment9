@{
}

@model Assignment9.Models.FilmInfo

<form method="post" asp-action="Update">

    <input type="hidden" value="@Model.FilmID" name="FilmID" />

    <label asp-for="Category">Category:</label>
    <input asp-for="Category" />
    <br />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" />
    <br />

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" />
    <br />

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" />
    <br />

    <label asp-for="Rating">Rating:</label>
    <input asp-for="Rating" />
    <br />

    <label asp-for="Edited">Edited:</label>
    <input type="checkbox" value="true" asp-for="Edited" />
    <br />

    <label asp-for="LentTo">Lent To (optional):</label>
    <input asp-for="LentTo" />
    <br />

    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" cols="5" />
    <br />

    <button type="submit">Submit Movie</button>
    <div asp-validation-summary="All"></div>
</form>